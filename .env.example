# üåç Environment Variables Template
# Copy this to .env and fill in your actual values

# ==============================================
# üöÄ CORE APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# ==============================================
# ü§ñ AI PROVIDER SETTINGS (GROQ)
# ==============================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ==============================================
# üèóÔ∏è CONTENTSTACK CONFIGURATION
# ==============================================
# Get these from your Contentstack dashboard
CONTENTSTACK_API_KEY=your_contentstack_api_key
CONTENTSTACK_DELIVERY_TOKEN=your_delivery_token
CONTENTSTACK_MANAGEMENT_TOKEN=your_management_token
CONTENTSTACK_ENVIRONMENT=production
CONTENTSTACK_REGION=us
CONTENTSTACK_API_HOST=cdn.contentstack.io
CONTENTSTACK_CDN=cdn.contentstack.io

# ==============================================
# üóÑÔ∏è DATABASE SETTINGS
# ==============================================
# For production, Launch will provide these automatically
DATABASE_URL=postgresql://localhost:5432/techsurf_dev
REDIS_URL=redis://localhost:6379

# ==============================================
# üîê SECURITY SETTINGS
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this
API_KEY_SECRET=your-api-key-secret-for-widget-auth
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Webhook secrets for integrations
CONTENTSTACK_WEBHOOK_SECRET=your-webhook-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# ==============================================
# üìä MONITORING & ANALYTICS
# ==============================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info

# Google Analytics (optional)
GA_TRACKING_ID=GA-XXXXXXXXX

# ==============================================
# üìß EMAIL SETTINGS (Optional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# üöÄ DEPLOYMENT SETTINGS
# ==============================================
# Contentstack Launch settings (auto-configured in production)
LAUNCH_PROJECT_ID=your-launch-project-id
LAUNCH_ENVIRONMENT=development

# CDN URLs (will be auto-configured by Launch)
CDN_URL=http://localhost:3000
STATIC_URL=http://localhost:3000
WIDGET_CDN_URL=http://localhost:3000/widget

# ==============================================
# üß™ DEVELOPMENT SETTINGS
# ==============================================
# Set to true for detailed logging
DEBUG=false

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session settings
SESSION_SECRET=your-session-secret-change-this

# ==============================================
# üì± THIRD-PARTY INTEGRATIONS
# ==============================================
# Slack notifications (optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Stripe for payments (optional)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ==============================================
# üéØ FEATURE FLAGS
# ==============================================
# Enable/disable features for testing
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_WEBHOOKS=true
ENABLE_MULTI_TENANT=true