{
  "name": "@techsurf/universal-chat-widget",
  "version": "1.0.0",
  "description": "Universal AI-powered chat widget with Contentstack integration",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "examples",
    "README.md"
  ],
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "prepublish": "npm run build"
  },
  "keywords": [
    "chat",
    "widget",
    "ai",
    "contentstack",
    "customer-support",
    "techsurf",
    "universal"
  ],
  "author": "TechSurf Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/techsurf-chat-platform",
    "directory": "sdk"
  },
  "homepage": "https://techsurf-chat.ai",
  "bugs": {
    "url": "https://github.com/your-username/techsurf-chat-platform/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rollup": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.1.0",
    "tslib": "^2.6.0",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ]
  }
}